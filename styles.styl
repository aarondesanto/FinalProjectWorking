*
  margin 0
  padding 0
  -moz-box-sizing border-box
  box-sizing border-box
  font-family arial

html, body
  height 100%

#map
  height 200px
  width 100%

// Navbar CSS
.navbar
  z-index 1
  position fixed
  top 0
  width 100%
  height 48.4px
  background-color white
  ul
    position relative
    display inline-table
    width 100%
    list-style none
    ul
      display none
      position absolute
      top 100%
      li
        float none
        position relative
      ul
        position absolute
        left 100%
        top 0
    li
      float left
      a
        display block
        padding 15px 30px
        color black
        text-decoration none
      ul
        width 85px
        a
          text-align center
          padding 5px 10px
    li:hover > ul
      display block
    .hamburger
      float right
  ul:after
    content ""
    clear both
    display block

